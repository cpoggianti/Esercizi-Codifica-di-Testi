    <text type="letter"> 
        <body xml:lang="ita"> 
            <pb n="1" facs="#page1Bellini" xml:id="page-1-Bellini"/> <!--codifica del testo della pagina1-->
            
            <div type="opener">
                <lb xml:id="informazioniLine1" facs="#informazioni_line1"/>
                <dateline> <!--descrizione luogo e data-->
                    <date when="1826-06" xml:lang="fr">Juin 26</date>
                    <name type="place">Puteau</name>
                    <address>N:° 19 bis rampe</address>
                    <name type="place" rend="underline">de Neuilly</name>
                </dateline>
            </div>

            <div type="letter-body">
                <ab type="parag"> <!--codifica saluto iniziale-->
                    <s type="sentence">
                        <salute>
                            <lb xml:id="salutoLine2" facs="#saluto_line2"/>
                            <hi rend="align(center)">Mio caro <name type="person">Carluccio</name></hi>
                        </salute>
                    </s>
                </ab>

                <ab type="parag"> <!--codifica contenuto della lettera-->
                    <p xml:id="contenutoLettera" facs="#contenuto_lettera">
                    avendo steso l'intero <term subtype="music-term">duetto</term> e mancando in esso qualche cosetta, desidererei che tu t'<distinct>incomodassi</distinct> a venire a <name type="place" xml:lang="fr">Puteau</name> per tutto fissare, e nell'<distinct>istesso</distinct> tempo darmi la <term>sortita</term> di <name type="person">Rubini</name>, se è terminata.
                    T'aspetto in qual giorno ed in qual'ora vorrai.
                    </p>
                </ab>
            </div>

            <div type="closer"> <!--codifica del saluto finale-->
                <ab type="parag"> <!--codifica saluto iniziale-->
                    <s type="sentence">
                        <salute>
                            <lb xml:id="congedoLine3" facs="#congedo_line2"/>
                            <hi rend="align(right)"> - Addio</hi>
                            <hi rend="align(right)">Il tuo <name type="person" rend="underline">Vincenzillo</name></hi>
                        </salute>
                    </s>
                </ab>
            </div>

            <pb n="2" facs="#page2Bellini" xml:id="page-2-Bellini"/> <!--codifica del testo della pagina2-->
            <div>
                <stamp type="postmark" rend="align(left)" xml:id="ombraMetaTimbro" facs="ombra_metatimbro">
                Parte inferiore di un timbro circolare in inchiostro nero, tagliato per tre quarti, quindi completamente illeggibile.
                </stamp>
            </div>

            <div type="destination">
                <stamp type="postmark" rend="align(right)" xml:id="timbro1" facs="timbro_1">
                Timbro circolare in inchiostro nero, poco leggibile con scritto centralmente
                    <mentioned><date when="06-27" xml:lang="fr">27 JUIN</date></mentioned>
                mentre intorno c'è scritto
                    <mentioned>
                        <name type="place">NEUILLY</name>-SUR-<gap reason="illegible"/>
                    </mentioned>
                </stamp>

                <p rend="align(center)" xml:id="text1" facs="text_1">
                <lb/>
                à Monsieur
                <lb/>
                Monsieur le Conte
                <lb/>
                n°<num type="cardinal">1</name>:
                </p>
            </div>

            <div>
                <stamp type="postmark" rend="align(left)" xml:id="timbro2" facs="timbro_2">
                Timbro circolare in inchiostro nero, quasi completamente illeggibile con scritto centralmente <mentioned><num>27</num></mentioned>
                </stamp>
            </div>

